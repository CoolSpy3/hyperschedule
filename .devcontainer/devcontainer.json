{
	"name": "Hyperschedule Dev Container",

	"dockerComposeFile": [
		"../docker-compose.yml",
		"./docker-compose.yml"
	],

	"service": "dev",
	"workspaceFolder": "/srv/hyperschedule/",

	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "/bin/zsh"
					}
				}
			},
			"extensions": [
				"ms-azuretools.vscode-docker",
				"ms-vscode-remote.remote-containers"
			]
		}
	}
}
