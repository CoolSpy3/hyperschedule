{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    // https://github.com/mrmckeb/typescript-plugin-css-modules/issues/222
    "composite": false,
    "lib": ["esnext", "dom"],
    "sourceRoot": "src",
    "baseUrl": "src",
    "rootDir": "src",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "postcssOptions": {
            "useConfig": true
          },
          "namedExports": false,
          "goToDefinitions": true,
          "allowUnknownClassnames": false
        }
      }
    ],
    "types": ["vite/client"],
    "paths": {
      "@components/*": ["components/*"],
      "@lib/*": ["lib/*"],
      "@hooks/*": ["hooks/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.css", "src/**/*"]
}
